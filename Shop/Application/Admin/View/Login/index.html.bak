<include file="Public:head"/>
<body>


    <div style="width:300px; margin:100px auto;">
        <h2>gwshop 后台管理系统</h2>
        <form action="{:U('Login/login')}" method="post">
        <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">用户名</span>
            <input type="text" class="form-control" name="user_name" placeholder="请填写用户名" aria-describedby="basic-addon1">
        </div>
        <br>
        <div class="input-group">
            <span class="input-group-addon" id="basic-addon2">密&nbsp;码</span>
            <input type="password" class="form-control" name="password" placeholder="请填写密码" aria-describedby="basic-addon1">
        </div>
        <br>
		 <div class="input-group">
            <span class="input-group-addon" id="basic-addon2">验证码</span>
            <input type="text" class="form-control" style="width:125px;" name="code" placeholder="请填写验证码" aria-describedby="basic-addon1">
			<img style="margin-left:5px;" src="{:U('verify')}" onclick=this.src='{:U("verify")}/?'+Math.random(); >
        </div>
		<br>
        <p><input type="submit" value="登入" class="btn btn-default"> 管理员：admin admin</p>
        </form>




    </div>
</body>
</html>